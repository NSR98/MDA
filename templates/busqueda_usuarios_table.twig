{% if usuarios|length == 0 %}
    <div class="alert alert-secondary alert-dismissible fade show center no_user_found">
        <strong>¡Vaya!</strong> No hemos encontrado ningún resultado para <strong>{{ username_target }}</strong>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% else %}
    {% for usuario in usuarios %}
        <div class="card my-3">
            <div class="card-body">
                <a href="{{ path('ver_usuario', {"id" : usuario.id}) }}">{{ usuario.user }}</a>
                <p>{{ usuario.name }} {{ usuario.surname }}</p>
                <a href="{{ path('ver_usuario', {"id" : usuario.id}) }}" class="btn btn-primary aling-center float-right"><i class="far fa-address-card"></i></a>

                {% if app.user.id != usuario.id %}
                    <a href="{{ path('crear_mensaje', {'id': usuario.id }) }}" class="btn btn-primary float-right mr-2"><i class="fas fa-envelope"></i></a>
                {% endif %}
            </div>
        </div>
    {% endfor %}
{% endif %}