{% extends 'base/base.html.twig' %}

{% block body %}
    {% if crear %}
        <div class="h3 text-center p-3">Alta de usuarios</div>
    {% else %}
        <div class="h3 text-center p-3">Modificar usuario</div>
    {% endif %}
    <div id="divForm" class="form-group formNewUser">
        {{ form(form) }}
    </div>
{% endblock %}

{% block title %}
    Crear usuario
{% endblock %}

{% block js %}
    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script type="application/javascript">
        $(document).ready(function () {
            bsCustomFileInput.init();
        })
    </script>
{% endblock %}

