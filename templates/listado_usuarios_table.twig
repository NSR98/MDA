<table class="table-striped listado_usuarios" >
    <tr>
        <th>Nombre de usuario</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Email</th>
        <th>DNI</th>
        <th>Acciones</th>
    </tr>
    {% for usuario in usuarios %}
        <tr>
            <td>{{ usuario.user }}</td>
            <td>{{ usuario.surname }}</td>
            <td>{{ usuario.name }}</td>
            <td>{{ usuario.email }}</td>
            <td>{{ usuario.dni }}</td>
            <td>
                <a href="{{ path('editar_usuario', {'id': usuario.id }) }}" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a>
                <button class="btn btn-danger btn-sm" onclick="deleteUser({{ usuario.id }})"><i class="fas fa-trash-alt"></i></button>
            </td>
        </tr>
    {% endfor %}
</table>